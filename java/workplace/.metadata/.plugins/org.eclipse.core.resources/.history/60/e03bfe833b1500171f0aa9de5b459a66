import java.util.Scanner;

public class test8 {

	public static void main(String[] args) {
		Scanner cin = new Scanner(System.in);
		int num = cin.nextInt();
		int[] Array = new int[num];
		for(int i=0;i<num;i++){
			Array[i] = cin.nextInt();
		}
		int begin = 0, end = 0;
		int tmp = 0, max = 0;
		for(int i=0;i<num;i++){
			if(Array[i]<Array[i-1]&&Array[i]<Array[i+1]){
				begin = end = i;
				if(tmp<max){
					tmp = max;
				}
				max = 0;
			}
			if(Array[i+1]>Array[i]){
				max++;
				continue;
			}else{
				max++;
				continue;
			}
		}
	}

}
