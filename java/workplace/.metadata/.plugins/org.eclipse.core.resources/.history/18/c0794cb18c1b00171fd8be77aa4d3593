import java.util.Scanner;

public class test13 {
	final public static int factorial(int num){
		int result = 0;
		if(num>=1){
			for(int i=1;i<num+1;i++){
				result *= i;
			}
		}else{
			result = 1;
		}
		return result;
	}
	final public static int C(int a, int b){
		int result = factorial(a)/(factorial(b)*factorial(a-b));
		return result;
	}
	public static void main(String[] args) {
		Scanner cin = new Scanner(System.in);
		int num = cin.nextInt();
		cin.nextLine();
		double[] p = new double[num];
		for(int i=0;i<num;i++){
			p[i] = cin.nextDouble();
		}
		int right_num = (int)(num*0.6)+1;
		System.out.println(right_num);
		factorial(0);
		double result = 0;
		for(int i=right_num;i<num+1;i++){
			System.out.println(i+" "+num);
			result += C(num, i)*(p[i]/100);
		}
		System.out.println(result);
	}
}
